@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/books1.jpg" alt="ASP.NET" class="img-responsive" style="width:100%;" />
            
        </div>
        <div class="item">
            <img src="~/images/books2.jpg" alt="Visual Studio" class="img-responsive" style="width:100%;" />
            
        </div>
        <div class="item">
            <img src="~/images/books3.jpg" alt="Microsoft Azure" class="img-responsive" style="width:100%;" />
          
        </div>

        <div class="item">
            <img src="~/images/books4.jpg" alt="Microsoft Azure" class="img-responsive" style="width:100%;" />
            
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <h2 style="font-style:italic;">
            Welcome to the website for Anywhereville Municipal Library!
        </h2>
       
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <p>
            Our books list is only available to members. Please sign in to access this. If you don't have an account, don't worry, registering with us is easy! Click the register link to become a library member!
        </p>
    </div>
</div>
