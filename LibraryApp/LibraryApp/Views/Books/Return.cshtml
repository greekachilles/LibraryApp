@model LibraryApp.Models.Book

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Return</h2>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Return">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" />
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><br />
                <input type="hidden" asp-for="Name" />
                @Html.DisplayFor(model => model.Name)

            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label><br />
                <input type="hidden" asp-for="Author" />
                @Html.DisplayFor(model => model.Author)

            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label><br />
                <input type="hidden" asp-for="Year" />
                @Html.DisplayFor(model => model.Year)
            </div>
            <div class="form-group">
                <label class="control-label">
                    @Html.DisplayNameFor(model=>model.Borrower.Name)
                        </label><br />
                    @Html.DisplayFor(model => model.Borrower.Name)
</div>
            <div class="form-group">
                <input type="submit" value="Return" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Books" asp-action="Index">Books List</a> |
    <a asp-controller="Borrowers" asp-action="Index">Borrower List</a>
</div>

