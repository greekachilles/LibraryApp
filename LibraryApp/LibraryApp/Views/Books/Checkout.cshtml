@model LibraryApp.Models.Book

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" />
           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><br />
                <input type="hidden" asp-for="Name" />
                @Html.DisplayFor(model => model.Name)

            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label><br />
                <input type="hidden" asp-for="Author" />
                @Html.DisplayFor(model => model.Author)

            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label><br />
                <input type="hidden" asp-for="Year" />
                @Html.DisplayFor(model => model.Year)
            </div>
            <div class="form-group">
                <label asp-for="BorrowerId" class="control-label"></label>
                <select asp-for="BorrowerId" class="form-control" asp-items="ViewBag.BorrowerId"></select>
                <span asp-validation-for="BorrowerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

